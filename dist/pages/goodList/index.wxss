  position: absolute;
  z-index: 99;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  background-color: #2083e4;
}
.cartWrap:after {
  clear: both;
  content: '';
  display: block;
  width: 0;
  height: 0;
  visibility: hidden;
