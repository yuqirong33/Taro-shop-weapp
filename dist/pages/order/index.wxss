
.orderContainer {
  height: 100vh;
  background: -webkit-gradient(linear, left top, left bottom, from(#f2f2f2), to(#f2f2f2));
  background: -webkit-linear-gradient(top, #f2f2f2, #f2f2f2);
  background: -o-linear-gradient(top, #f2f2f2, #f2f2f2);
  background: linear-gradient(180deg, #f2f2f2, #f2f2f2);
  font-family: "Microsoft YaHei UI", serif;
}
.orderContainer .searchWrap {
  position: relative;
  height: 100rpx;
  background-color: #fff;
}
.orderContainer .searchWrap .searchInput {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-54%, -50%);
      -ms-transform: translate(-54%, -50%);
          transform: translate(-54%, -50%);
  width: 70%;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  margin: 0 auto;
  font-size: 28rpx;
  color: #999;
  background-color: #f2f2f2;
  border-radius: 60rpx;
}
.orderContainer .searchWrap .removeIcon {
  position: absolute;
  top: 50%;
  right: 6%;
  -webkit-transform: translateY(-52%);
      -ms-transform: translateY(-52%);
          transform: translateY(-52%);
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.orderContainer .scrollView {
  height: calc(100vh - 100rpx);
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  padding: 24rpx 0;
}
.orderContainer .scrollView .cardWrap {
  padding: 0 30rpx;
}
.orderContainer .scrollView .cardWrap .cardDom {
  padding: 20rpx;
  margin-bottom: 24rpx;
  background-color: #fff;
  -webkit-box-shadow: 1rpx 1rpx 3rpx 1rpx rgba(181, 181, 181, 0.5);
          box-shadow: 1rpx 1rpx 3rpx 1rpx rgba(181, 181, 181, 0.5);
  border-radius: 12rpx;
}
.orderContainer .scrollView .cardWrap .cardDom .cardImgWrap {
  float: left;
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.orderContainer .scrollView .cardWrap .cardDom .cardImgWrap .cardImg {
  width: 100%;
  height: 100%;
}
.orderContainer .scrollView .cardWrap .cardDom .cardCon .cardTitle {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}
.orderContainer .scrollView .cardWrap .cardDom .cardCon .cardType {
  font-size: 28rpx;
  color: #d82b2f;
  margin: 10rpx 0;
}
.orderContainer .scrollView .cardWrap .cardDom .cardCon .cardTxt {
  font-size: 28rpx;
  color: #999;
}
.orderContainer .scrollView .cardWrap .cardDom:after {
  clear: both;
  content: '';
  display: block;
  width: 0;
  height: 0;
  visibility: hidden;
}
